{
    "name": "superlogica/skeleton-php-symfony",
    "type": "project",
    "authors": [
        {
            "name": "Helio Ricardo",
            "email": "helio.ricardo@superlogica.com"
        }
    ],
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test-ci": [
            "phpcs",
            "XDEBUG_MODE=coverage phpunit --coverage-text --colors=never --coverage-clover=var/coverage/coverage.clover --log-junit=var/coverage/log-junit.xml"
        ],
        "test": [
            "phpcs",
            "parallel-lint --exclude app --exclude vendor .",
            "phpunit"
        ],
        "lint": [
            "phpcs"
        ],
        "lint-fix": [
            "phpcbf"
        ],
        "coverage": [
            "XDEBUG_MODE=coverage phpunit --coverage-html var/coverage/"
        ]
    },
    "require": {
        "php": "^8.2",
        "doctrine/annotations": "^2.0",
        "doctrine/dbal": "^3.9",
        "doctrine/doctrine-bundle": "^2.14",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/migrations": "^3.9",
        "doctrine/orm": "^3.3",
        "guzzlehttp/guzzle": "^7.9",
        "nelmio/api-doc-bundle": "^4.9",
        "symfony/asset": "^7.2",
        "symfony/cache": "^7.2",
        "symfony/console": "^7.2",
        "symfony/doctrine-bridge": "^7.2",
        "symfony/flex": "^2.2",
        "symfony/framework-bundle": "^7.2",
        "symfony/proxy-manager-bridge": "^6.4",
        "symfony/runtime": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.12",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^8.0.0",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/maker-bundle": "^v1.63",
        "symfony/twig-bundle": "^7.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.2.*"
        }
    }
}
